root = true

[*]
charset = utf-8
end_of_line = LF
insert_final_newline = true
trim_trailing_whitespace = true

[*.go]
indent_style = tab
indent_size = 2

[*.js]
indent_style = space
indent_size = 2

[*.css]
indent_style = space
indent_size = 2

[*.sh]
indent_style = space
indent_size = 2


[Makefile]
indent_style = tab

[*.md]
trim_trailing_whitespace = false
